<Window x:Class="Waterlog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Waterlog"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="450" MinWidth="800" 
        SizeToContent="WidthAndHeight">
    
            <TabControl Grid.Row="0">
                <TabItem Header="Tanks">
                    <TabItem.Content>
                        <local:TankPage DataContext="{Binding tpvm}"/>
                    </TabItem.Content>
                </TabItem>
                <TabItem Header="Livestock"/>
                <TabItem Header="Maintenance"/>
            </TabControl>
    
</Window>
